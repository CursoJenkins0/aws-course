# Mostrar directorio de trabajo

cd

echo %cd%

# Mirar los archivos del directorio

dir

# Cambiar directorio

cd

Example: "cd Documents\mydata"

# Volver al directorio home

cd %homepath%

# Crear un directorio 

mkdir 

Example: "mkdir mydata"

# Eliminar un directorio

rmdir (if empty)

rm /s (if not empty)

Example: "rmdir mydata"

# Crear un archivo vacÃ­o

type nul > testfile.txt

# Crear un archivo con texto

echo "hello world" > mytestfile.txt

# Eliminar un archivo

del

Example: "del mytestfile.txt"

# Copiar un archivo 

copy

Example: "copy mytestfile.txt Desktop"

# Pedir ayuda de los comandos

help <command>

Example: "help copy"

# Mostrar contenido del archivo en la pantalla

type

Example: "type mytestfile.txt"

# Limpiar pantalla

cls
